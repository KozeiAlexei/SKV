@using SKV.ML.Concrete.Model.UserModel;

@model User

@using SKV.BLL.Other
@using SKV.ML.Concrete

@using SKV.PL.ClientSide.Concrete;
@using SKV.PL.ClientSide.Components.VerticalFormField

@using Config = SKV.Configuration;

@{
    string ctrl = Config.AngularControllerAs.UserManagerControllerAs;
}

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_UserName_Field)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_Email_Field)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_Initials_Field)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_PhoneNumber_Field)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_AsteriskId)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_Roles)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_Password)).Render())

@(ComponentFactory.Create<VerticalFormFieldMvc>()
                  .ImportFromModel(CacheObject.Get<VerticalFormFieldMvcModel>(CacheItemClass.UI, (int)UIComponentKey.UserCreating_PasswordConfirm)).Render())








<div class="row">
    <div class="col-lg-6">
        <button class="btn btn-flat btn-primary btn-block" ng-click="@(ctrl).Register()">Создать пользователя</button>
    </div>
    <div class="col-lg-6">
        <button class="btn btn-flat btn-primary btn-block" ng-click="@(ctrl).HideUserCreationModal()">Отмена</button>
    </div>
</div>
