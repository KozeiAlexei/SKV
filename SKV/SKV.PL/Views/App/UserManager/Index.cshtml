@using SKV.PL.Helpers;

@{ 
    var DTCName = "ctrl";
    var UMCName = "ulCtrl";
}

@section Scripts {
    @ClientSide.GetDirective("Widget")
    @ClientSide.GetDirective("CompileHtml")
    @ClientSide.GetDirective("DynamicTable")

    @ClientSide.DynamicTableModule()

    @ClientSide.GetService("Tools")
    @ClientSide.GetService("Request")
    @ClientSide.GetService("Location")
}

@Html.Partial("UserManagerController")


@(DynamicTable

.Create()
.AngularApplicationName("SKV")
.Name(Resources.Resource.UserManager).ControllerName(DTCName)
.ActionsControllerName(UMCName).SettingsFactoryName("UserTableSettingsFactory")

.Columns(columns =>
{
    columns.Create().Name("UserName").Title(Resources.Resource.UserName).Width(20).Type(TableColumnDataType.Text).Editable(true).Filterable(true);
    columns.Create().Name("Email").Title(Resources.Resource.Email).Width(20).Type(TableColumnDataType.Text).Editable(true).Filterable(true);
    columns.Create().Name("PhoneNumber").Title(Resources.Resource.PhoneNumber).Width(20).Type(TableColumnDataType.Text).Editable(true).Filterable(true);
    columns.Create().Name("Profile.Name").Title(Resources.Resource.UserInitials).Width(20).Type(TableColumnDataType.Text).Editable(true).Filterable(true);
    columns.Create().Name("Actions").Title(Resources.Resource.Actions).Width(20).Type(TableColumnDataType.Actions).Editable(true).Filterable(false);
})
.Build()
)